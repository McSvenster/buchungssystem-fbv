<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Vname</th>
      <th>Nname</th>
      <th>Company</th>
      <th>Password digest</th>
      <th>Strasse</th>
      <th>Hnr</th>
      <th>Plz</th>
      <th>Ort</th>
      <th>Tel</th>
      <th>Role</th>
      <th>Onetimetoken</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.vname %></td>
        <td><%= user.nname %></td>
        <td><%= user.company_id %></td>
        <td><%= user.password_digest %></td>
        <td><%= user.strasse %></td>
        <td><%= user.hnr %></td>
        <td><%= user.plz %></td>
        <td><%= user.ort %></td>
        <td><%= user.tel %></td>
        <td><%= user.role %></td>
        <td><%= user.onetimetoken %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

