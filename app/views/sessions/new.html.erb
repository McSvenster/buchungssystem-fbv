
<article>
<%= form_tag sessions_path do %>		
	<div class="form-group">
	<label><%= t("activerecord.attributes.user.email") %></label><br>
  	<%= text_field_tag :email, params[:email], autofocus: true, class: "form-control" %>
  </div>
  <div class="form-group">
	<label><%= t("activerecord.attributes.user.password") %></label><br>
		<%= password_field_tag :password, class: "form-control" %>
	</div>
	<div class="actions">
	   <%= submit_tag "login", class: "btn btn-primary"%>
   </div>
<% end %>
</article>